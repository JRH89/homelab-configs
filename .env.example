# Homelab Environment Variables
# Copy this file to .env and customize for your setup

# Network Configuration
DOMAIN=homelab.local
IP_ADDRESS=192.168.1.100

# Timezone
TZ=America/Los_Angeles

# Gitea Configuration
GITEA_APP_NAME=Homelab Git
GITEA_SERVER_PORT=3000
GITEA_SSH_PORT=2222

# Jellyfin Configuration
JELLYFIN_SERVER_PORT=8096
JELLYFIN_HTTPS_PORT=8920

# Syncthing Configuration
SYNCTHING_WEB_PORT=8384
SYNCTHING_LISTEN_PORT=22000
SYNCTHING_DISCOVERY_PORT=21027

# FileBrowser Configuration
FILEBROWSER_PORT=8080

# Netdata Configuration
NETDATA_PORT=19999

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Backup Configuration
BACKUP_DIR=/backup
BACKUP_RETENTION_DAYS=7

# Media Directories
MEDIA_DIR=/home/jared/docker/media
MOVIES_DIR=/home/jared/docker/media/movies
TV_DIR=/home/jared/docker/media/tv
MUSIC_DIR=/home/jared/docker/media/music

# Hardware Acceleration (for Jellyfin)
ENABLE_HARDWARE_ACCELERATION=true

# Security
# Generate these with: openssl rand -hex 32
GITEA_SECRET_KEY=your-secret-key-here
JELLYFIN_API_KEY=your-api-key-here

# Optional: External Services
# CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-token
# PUSHOVER_APP_KEY=your-pushover-app-key
# PUSHOVER_USER_KEY=your-pushover-user-key
